{
    "$id": "https://github.com/jkyberneees/fastify-gateway/src/config-schema.json",
    "type": "object",
    "properties": {
      "globalPathRegex": {
        "$id": "/properties/globalpathregex",
        "type": "string"
      },
      "middlewares": {
        "$id": "/properties/middlewares",
        "type": "array"
      },
      "routes": {
        "$id": "/properties/routes",
        "type": "array",
        "items": {
          "$id": "/properties/routes/items",
          "type": "object",
          "properties": {
            "prefix": {
              "$id": "/properties/routes/items/properties/prefix",
              "type": "string",
              "title": "The Prefix Schema ",
              "default": "",
              "minLength": 2,
              "examples": [
                "/v1/users"
              ]
            },
            "prefixRewrite": {
              "$id": "/properties/routes/items/properties/prefixRewrite",
              "type": "string",
              "title": "The PrefixRewrite Schema ",
              "default": "",
              "examples": [
                "/v1"
              ]
            },
            "target": {
              "$id": "/properties/routes/items/properties/target",
              "type": "string",
              "title": "The Target Schema ",
              "default": "",
              "examples": [
                "http://users.api:3000"
              ]
            },
            "pathRegex": {
              "$id": "/properties/routes/items/properties/pathRegex",
              "type": "string",
              "title": "The PathRegex Schema ",
              "default": "/*",
              "examples": [
                "/*",
                "*"
              ]
            },
            "methods": {
              "$id": "/properties/routes/items/properties/methods",
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["DELETE", "GET", "HEAD", "PATCH", "POST", "PUT", "OPTIONS"]
              },
              "examples": [
                ["GET"]
              ]
            },
            "middlewares": {
              "$id": "/properties/routes/items/properties/middlewares",
              "type": "array"
            },
            "hooks": {
              "$id": "/properties/routes/items/properties/hooks",
              "type": "object"
            }
          },
          "required": [
            "target",
            "middlewares",
            "hooks"
          ]
        }
      }
    },
    "required": [
      "middlewares",
      "routes"
    ]
  }
